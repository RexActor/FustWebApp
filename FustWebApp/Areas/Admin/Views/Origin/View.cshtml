@model FustWebApp.Models.Domain.Origin


@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Edit/Delete Origin";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (@Html.BeginForm("UpdateOrigin", "Origin", HttpMethod.Post))
{

	@Html.AntiForgeryToken()
	@Html.HiddenFor(model=>model.Id)
	<div class="Container">
		@Html.ValidationSummary(true,"",new {@class="text-danger"})
		<div class="row mb-2">
			@Html.LabelFor(model=>model.OriginName, htmlAttributes:new{@class="col-form-label col-sm-2"})
			<div class="col-auto">
				@Html.EditorFor(model=>model.OriginName,new {htmlattribute = new {@class="form-control", @required="required"}})
				@Html.ValidationMessageFor(model=>model.OriginName,"",new {@class="text-danger"})
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" name="Edit" value="Edit" class="btn btn-primary" />
				<input type="submit" name="Delete" value="Delete" class="btn btn-danger" />
			</div>
		</div>
	</div>
}

