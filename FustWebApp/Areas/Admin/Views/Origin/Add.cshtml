@model FustWebApp.Models.AddOriginViewModel


@{
	ViewData["Title"] = "Add Origin";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (@ViewBag.Message != null)
{
	<div class="@ViewBag.Style  text-sm-center mb-1 py-1"><h4>@ViewBag.Message</h4></div>
}

@using (@Html.BeginForm("AddOrigin", "Origin", HttpMethod.Post))
{

	@Html.AntiForgeryToken()
	<div class="container">
		@Html.ValidationSummary(true,"",new {@class="text-danger"})
		<div class="row mb-2">
			@Html.LabelFor(model=>model.OriginName, htmlAttributes:new{@class="col-form-label col-sm-2"})
			<div class="col-auto col-md-3">
				@Html.EditorFor(model=>model.OriginName,new {htmlattributes = new {@class="form-control", @required="required", @placeholder="Enter Origin (Ex: UK,Denmark, etc)" }})
				@Html.ValidationMessageFor(model=>model.OriginName,"",new {@class="text-danger"})
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" name="Save" value="Save" class="btn btn-primary" />
			</div>
		</div>
	</div>
}

