@model FustWebApp.Models.Domain.Currency

@{
	ViewData["Title"] = "Add Currency";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddCurrency", "Currency", HttpMethod.Post))
{

	@Html.AntiForgeryToken()

	<div class="container">
		<div class="row mb-2">

			@Html.LabelFor(model=>model.currencyName,htmlAttributes:new{@class ="col-form-label col-sm-2" })
			<div class="col-auto">
				@Html.EditorFor(model=>model.currencyName,new { htmlAttributes = new { @class = "form-control",@placeholder="Currency Name",@required ="required",@type="text" } })
				@Html.ValidationMessageFor(model => model.currencyName, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="row mb-2">

			@Html.LabelFor(model=>model.currencyAbrevation,htmlAttributes:new{@class ="col-form-label col-sm-2" })
			<div class="col-auto">
				@Html.EditorFor(model=>model.currencyAbrevation,new { htmlAttributes = new { @class = "form-control",@placeholder="Abbrevation {Ex. GBP}",@required ="required",@type="text" } })
				@Html.ValidationMessageFor(model => model.currencyAbrevation, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="row mb-2">

			@Html.LabelFor(model=>model.currencyTargetName,htmlAttributes:new{@class ="col-form-label col-sm-2" })
			<div class="col-auto">
				@Html.EditorFor(model=>model.currencyTargetName,new { htmlAttributes = new { @class = "form-control",@placeholder="Target Name {Ex. Euro}",@required ="required",@type="text" } })
				@Html.ValidationMessageFor(model => model.currencyTargetName, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="row mb-2">

			@Html.LabelFor(model=>model.currencyTargetNameAbrevation,htmlAttributes:new{@class ="col-form-label col-sm-2" })
			<div class="col-auto">
				@Html.EditorFor(model=>model.currencyTargetNameAbrevation,new { htmlAttributes = new { @class = "form-control",@placeholder="Target Abbrevation {Ex. GBP}",@required ="required",@type="text" } })
				@Html.ValidationMessageFor(model => model.currencyTargetNameAbrevation, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="row mb-2">

			@Html.LabelFor(model=>model.currencyCountryCode,htmlAttributes:new{@class ="col-form-label col-sm-2" })
			<div class="col-auto">
				@Html.EditorFor(model=>model.currencyCountryCode,new { htmlAttributes = new { @class = "form-control",@placeholder="Country Code {Ex. NL,GB,DK}",@required ="required",@type="text" } })
				@Html.ValidationMessageFor(model => model.currencyCountryCode, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="row mb-2">

			@Html.LabelFor(model=>model.currencyExchangeRate,htmlAttributes:new{@class ="col-form-label col-sm-2" })
			<div class="col-auto">
				@Html.EditorFor(model=>model.currencyExchangeRate,new { htmlAttributes = new { @class = "form-control",@placeholder="1.0",@required ="required",@type="number" } })
				@Html.ValidationMessageFor(model => model.currencyExchangeRate, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="row mb-2">

			@Html.LabelFor(model=>model.exchangeRateYear,htmlAttributes:new{@class ="col-form-label col-sm-2" })
			<div class="col-auto">
				@Html.EditorFor(model=>model.exchangeRateYear,new { htmlAttributes = new { @class = "form-control",@placeholder="2023",@required ="required",@type="number" } })
				@Html.ValidationMessageFor(model => model.exchangeRateYear, "", new { @class = "text-danger" })
			</div>
		</div>



		<div class="form-group">

			<input class="btn btn-outline-success btn-sm" type="submit" value="Save">
		</div>


	</div>




}