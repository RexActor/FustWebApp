@model FustWebApp.Models.Domain.Currency

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
	<h4>Currency</h4>
	<hr />
	<div class="row">
		@using (Html.BeginForm("Edit", "Currency", HttpMethod.Post))
		{

			@Html.AntiForgeryToken()

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			@Html.HiddenFor(model=>model.currencyId)
			<div class="row mb-2">
				@Html.LabelFor(model=>model.currencyName,htmlAttributes:new{@class="col-form-label col-sm-2"})
				<div class="col-auto">
					@Html.EditorFor(model=>model.currencyName,new{htmlAttributes=new{@class="form-control"}})
					@Html.ValidationMessageFor(model=>model.currencyName,"",new{@class="text-danger"})
				</div>
			</div>

			<div class="row mb-2">
				@Html.LabelFor(model=>model.currencyAbrevation,htmlAttributes:new{@class="col-form-label col-sm-2"})
				<div class="col-auto">
					@Html.EditorFor(model=>model.currencyAbrevation,new{htmlAttributes=new{@class="form-control"}})
					@Html.ValidationMessageFor(model=>model.currencyAbrevation,"",new{@class="text-danger"})
				</div>
			</div>

			<div class="row mb-2">
				@Html.LabelFor(model=>model.currencyCountryCode,htmlAttributes:new{@class="col-form-label col-sm-2"})
				<div class="col-auto">
					@Html.EditorFor(model=>model.currencyCountryCode,new{htmlAttributes=new{@class="form-control"}})
					@Html.ValidationMessageFor(model=>model.currencyCountryCode,"",new{@class="text-danger"})
				</div>
			</div>

			<div class="row mb-2">
				@Html.LabelFor(model=>model.currencyTargetName,htmlAttributes:new{@class="col-form-label col-sm-2"})
				<div class="col-auto">
					@Html.EditorFor(model=>model.currencyTargetName,new{htmlAttributes=new{@class="form-control"}})
					@Html.ValidationMessageFor(model=>model.currencyTargetName,"",new{@class="text-danger"})
				</div>
			</div>

			<div class="row mb-2">
				@Html.LabelFor(model=>model.currencyTargetNameAbrevation,htmlAttributes:new{@class="col-form-label col-sm-2"})
				<div class="col-auto">
					@Html.EditorFor(model=>model.currencyTargetNameAbrevation,new{htmlAttributes=new{@class="form-control"}})
					@Html.ValidationMessageFor(model=>model.currencyTargetNameAbrevation,"",new{@class="text-danger"})
				</div>
			</div>

			<div class="row mb-2">
				@Html.LabelFor(model=>model.currencyExchangeRate,htmlAttributes:new{@class="col-form-label col-sm-2"})
				<div class="col-auto">
					@Html.EditorFor(model=>model.currencyExchangeRate,new{htmlAttributes=new{@class="form-control",@type="number"}})
					@Html.ValidationMessageFor(model=>model.currencyExchangeRate,"",new{@class="text-danger"})
				</div>
			</div>

			<div class="row mb-2">
				@Html.LabelFor(model=>model.exchangeRateYear,htmlAttributes:new{@class="col-form-label col-sm-2"})
				<div class="col-auto">
					@Html.EditorFor(model=>model.exchangeRateYear,new{htmlAttributes=new{@class="form-control",@type="number"}})
					@Html.ValidationMessageFor(model=>model.exchangeRateYear,"",new{@class="text-danger"})
				</div>
			</div>

			<div class="form-group mt-2">
				<input type="submit" value="Save" class="btn btn-outline-primary btn-sm" />
				<a class="btn btn-sm btn-outline-dark shadow" asp-action="Delete" asp-area="Admin" asp-controller="Currency" asp-route-id="@Model.currencyId">Delete</a>
				<a class="btn btn-sm btn-outline-secondary shadow" asp-area="Admin" asp-controller="Currency" asp-action="Index">Back to List</a>
			</div>
		}
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
