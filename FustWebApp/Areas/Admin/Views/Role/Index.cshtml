@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@inject UserManager<IdentityUser> userManager;


@{
	ViewData["Title"] = "Roles";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	var userlist = ViewBag.Users as IEnumerable<IdentityUser>;
}
<a asp-action="Create" class="btn btn-primary btn-sm mb-3">Create Role</a>

<table class="table w-50 text-sm-center">
	<thead>
		<tr>
			<th hidden>ID</th>
			<th>Name</th>
			<th>Users</th>
			<th>Update</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var role in Model)
		{
			<tr>
				<td class="text-truncate" hidden style="width:10px;">@role.Id</td>
				<td>@role.Name</td>
				<td i-role="@role.Id"></td>
				<td>
					<a class="btn btn-primary btn-sm" asp-action="Update" asp-route-id="@role.Id">Update</a>
				</td>
				<td>
					@Html.ActionLink(
				"Delete",
				"Delete",
				"Role",
				new{confirm=true,id=role.Id},
				new{onclick ="return confirm ('Do you really want to delete this role?')",@class="btn btn-sm btn-danger"}
				)
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="container mt-5 mw-100">
	<h3 class="fw-bold text-sm-center mt-3">User List</h3>
	<a asp-action="CreateUser" class="btn btn-warning mb-3 btn-sm">Create User</a>
	<table class="table text-sm-center">
		<thead>
			<tr>
				<th>User name</th>
				<th>User Email</th>
				<th>Email Confirmed</th>
				<th>2FA Enabled</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (IdentityUser user in userlist)
			{
				<tr>
					<td>@user.UserName</td>
					<td>@user.Email</td>
					<td>@user.EmailConfirmed</td>
					<td>@user.TwoFactorEnabled</td>
					<td width="50px">
						<a class="btn btn-primary btn-sm" asp-action="UpdateUser" asp-route-id="@user.Id">Update</a>
					</td>
					<td width="50px">
						@Html.ActionLink(
					"Delete",
					"DeleteUser",
					"Role",
					new{confirm=true,id=user.Id},

					new{onclick ="return confirm ('Do you really want to delete this user?')",@class="btn btn-sm btn-danger"}
					)
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>