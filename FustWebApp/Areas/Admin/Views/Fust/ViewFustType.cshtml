@model FustWebApp.Models.Domain.FustType

@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Edit/Delete Fust Type";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (@Html.BeginForm("EditFustType", "Fust", HttpMethod.Post))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(model=>model.FustTypeId)
	<div class="container">
		@Html.ValidationSummary(true,"",new{@class = "text-danger"})
		<div class="row mb-2">
			@Html.LabelFor(model=>model.FustTypeName,htmlAttributes:new{@class ="col-form-label col-sm-2" })
			<div class="col-auto">
				@Html.EditorFor(model => model.FustTypeName, new { htmlAttributes = new { @class = "form-control",@required ="required" } })
				@Html.ValidationMessageFor(model => model.FustTypeName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="row mb-2">
			@Html.LabelFor(model=>model.Comment,htmlAttributes:new{@class ="col-form-label col-sm-2"})
			<div class="col-auto">
				@Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control", @type="text"} })
				@Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" name="Edit" class="btn btn-primary" />
				<input type="submit" value="Delete" name="Delete" class="btn btn-danger" />
			</div>
		</div>
	</div>
}