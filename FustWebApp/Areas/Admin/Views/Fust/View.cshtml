@model FustWebApp.Models.Domain.Fust

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["Title"] = "Edit/Delete Fust Item";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("UpdateFust", "Fust", HttpMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container">
        @Html.ValidationSummary(true,"",new{@class = "text-danger"})
        @Html.HiddenFor(model=>model.Id)
        <div class="row mb-2">
            @Html.LabelFor(model=>model.FustName,htmlAttributes:new{@class ="col-form-label col-sm-2" })
            <div class="col-auto">
                @Html.EditorFor(model => model.FustName, new { htmlAttributes = new { @class = "form-control",@required ="required" } })
                @Html.ValidationMessageFor(model => model.FustName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-2">
            @Html.LabelFor(model=>model.FustType.FustTypeName,htmlAttributes:new{@class ="col-form-label col-sm-2"})
            <div class="col-auto">
                @Html.DropDownListFor(model=>model.FustType.FustTypeName, new SelectList(ViewBag.FustTypes),new {@class ="form-select"})
                @Html.ValidationMessageFor(model => model.FustType.FustTypeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-2">
            @Html.LabelFor(model=>model.FustAmountPerPallet,htmlAttributes:new{@class ="col-form-label col-sm-2"})
            <div class="col-auto">
                @Html.EditorFor(model => model.FustAmountPerPallet, new { htmlAttributes = new { @class = "form-control" ,@required ="required", @type="number"} })
                @Html.ValidationMessageFor(model => model.FustAmountPerPallet, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mb-2">
            @Html.LabelFor(model=>model.baseValue,htmlAttributes:new{@class ="col-form-label col-sm-2"})
            <div class="col-auto">
                @Html.EditorFor(model => model.baseValue, new { htmlAttributes = new { @class = "form-control" ,@required ="required", @type="number"} })
                @Html.ValidationMessageFor(model => model.baseValue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" name="Edit" class="btn btn-primary" />
                <input type="submit" value="Delete" name="Delete" class="btn btn-danger"/>
            </div>
        </div>
    </div>
}